{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./server",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": false
    },
    "include": [
        "server"
    ],
    "exclude": [
        "node_modules/",
        "dist/",
        "build/"
    ]
}